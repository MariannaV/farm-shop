mixin slider()
  slider-items.cashbox-slider
    slider-items-description
      h6 Выберите свою кассу
      a      
    .slider-items-container      
      .slide-item
        input.slide-item-checkbox(type="checkbox" id="evotor1")
        .slide-item-block
          img.slide-item-img(src="../img/evotor-7.2.png", alt="")
          .slide-item-text
            .slide-item-buttons
              button.slide-item-minus -
              .slide-item-amount 1
              button.slide-item-plus +          
            h2.slide-item-title Эвотор 7.2
            p.slide-item-description Проверенная, функциональная, доступная
            div.slide-item-price.only-price 18 490
            label.slide-item-label(for="evotor1")
      .slide-item
        input.slide-item-checkbox(type="checkbox" id="evotor2")
        .slide-item-block
          img.slide-item-img(src="../img/evotor-7.2.png", alt="")
          .slide-item-text
            .slide-item-buttons
              button.slide-item-minus -
              .slide-item-amount 1
              button.slide-item-plus +          
            h2.slide-item-title Эвотор 7.2
            p.slide-item-description Проверенная, функциональная, доступная
            div.slide-item-price.only-price 18 490
            label.slide-item-label(for="evotor2")
      .slide-item
        input.slide-item-checkbox(type="checkbox" id="evotor3")
        .slide-item-block
          img.slide-item-img(src="../img/evotor-7.2.png", alt="")
          .slide-item-text
            .slide-item-buttons
              button.slide-item-minus -
              input(type="number" min="1" value="1").slide-item-amount
              button.slide-item-plus +          
            h2.slide-item-title Эвотор 7.3
            p.slide-item-description Проверенная, функциональная, доступная
            div.slide-item-price.only-price 18 490
            label.slide-item-label(for="evotor3")